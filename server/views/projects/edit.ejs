<% include ../partials/header.ejs %>

<!-- Content for the Edit Page -->
<div id="editPage">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="CourseNameTextField">Course Name</label>
                    <input type="text" class="form-control" 
                    id="CourseNameTextField" 
                    placeholder="Enter Course Name"
                    name="courseName"
                    value="<%= project.courseName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="ProjectNameTextField">Project Name</label>
                    <input type="text" class="form-control" 
                    id="ProjectNameTextField" 
                    placeholder="Enter Project Name"
                    name="projectName"
                    value="<%= project.projectName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="DescriptionTextField">Description</label>
                    <input type="text" class="form-control" 
                    id="DescriptionTextField" 
                    placeholder="Enter Description"
                    name="description"
                    value="<%= project.description %>"
                    required>
                </div>

                <button type="submit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Submit</button>
                <a href="/project-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>


        </div>
    </div>
</div>





<% include ../partials/footer.ejs %>