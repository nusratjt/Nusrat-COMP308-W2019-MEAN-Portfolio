<%include ../partials/header.ejs %>

<div id="projectPage">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1 class="mt-5"><%= title %></h1><br>
                <a class="btn btn-primary" href="/project-list/add" role="button">
                    <i class="fa fa-plus-circle"></i> Add new Project</a>
                    <br>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Course Name</th>
                        <th class="text-center">Project Name</th>
                        <th class="text-center">Description</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < projectList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= projectList[count].courseName %></td>
                            <td class="text-center"><%= projectList[count].projectName %></td>
                            <td class="text-center"><%= projectList[count].description %></td>
                            <td class="text-center">
                                    <a href="/project-list/edit/<%= projectList[count]._id %>"
                                        class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    </td>
                                    <td class="text-center">
                                            <a href="/project-list/delete/<%= projectList[count]._id %>"
                                                class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                            </td>
                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>

<%include ../partials/footer.ejs %>